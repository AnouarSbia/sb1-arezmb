---
const { title = "تخفيضات الصيف", subtitle = "خصم يصل إلى 50٪ على منتجات مختارة" } = Astro.props;
---

<section class="relative bg-gray-900 h-[500px] flex items-center">
  <div class="absolute inset-0">
    <img
      src="https://images.unsplash.com/photo-1555041469-a586c61ea9bc?w=1600"
      alt="صورة الخلفية"
      class="w-full h-full object-cover opacity-50"
    />
  </div>
  <div class="relative container mx-auto px-4">
    <div class="max-w-2xl">
      <h1 class="text-5xl font-bold text-white mb-4">{title}</h1>
      <p class="text-xl text-gray-200 mb-8">{subtitle}</p>
      <a
        href="/products"
        class="inline-block bg-white text-gray-900 py-3 px-8 rounded-lg hover:bg-gray-100 transition"
      >
        تسوق الآن
      </a>
    </div>
  </div>
</section>